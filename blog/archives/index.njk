---
pagination:
  data: collections.archives
  size: 1
  alias: year
permalink: "blog/{{ year }}/index.html"
layout: layout.njk
title: "Posts from {{ year }}"
---

<h2>Posts from {{ year }}</h2>

<ul>
  {% for post in collections.all %}
    {% if post.date.getFullYear() === year %}
      <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
        <span>â€” {{ post.date | date("MMMM D, YYYY") }}</span>
      </li>
    {% endif %}
  {% endfor %}
</ul>
